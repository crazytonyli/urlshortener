{
  "name": "URL Shortener",
  "version": "1.0",
  "description": "Extension which is used to shorten URL.",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Shorten this URL",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ]
}
